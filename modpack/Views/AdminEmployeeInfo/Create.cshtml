@model modpack.ViewModels.CAdminViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>部門管理</h1>
<h3>新增人員資訊</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input type="hidden" asp-for="AdminTitleID" />
                <label asp-for="TitleID" class="control-label"></label>
                <select asp-for="TitleID" class="form-control" asp-items="ViewBag.TitleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AdminName" class="control-label"></label>
                <input asp-for="AdminName" class="form-control" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aAdminCode" class="control-label"></label>
                <input asp-for="aAdminCode" class="form-control" />
                <span asp-validation-for="aAdminCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminImage" class="control-label"></label>
                <input type="file" asp-for="AdminImage" class="form-control" />
                <span asp-validation-for="AdminImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminAccount" class="control-label"></label>
                <input asp-for="AdminAccount" class="form-control" />
                <span asp-validation-for="AdminAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminPassword" class="control-label"></label>
                <input asp-for="AdminPassword" class="form-control" />
                <span asp-validation-for="AdminPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消並返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}