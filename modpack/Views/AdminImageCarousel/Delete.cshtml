@model modpack.Wrap.CWrapAdministrator
@{
    ViewData["Title"] = "Delete";
}

<h1>輪播圖片管理</h1>
<h3>確定要刪除此筆資料?</h3>
<div>
    <h4>ImageCarousel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="ImageFile"></label>
        </dt>
        <dd class="col-sm-10">
            <span asp-for="ImageFile"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            <span asp-for="Description"></span>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageCarouselID" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="List">回到列表</a>
    </form>
</div>