@model modpack.Models.StoreLocation

@{
    ViewData["Title"] = "Delete";
}

<h1>資訊刪除</h1>

<h3>確定刪除資料嗎?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model) @Html.DisplayName("門市")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model)  @Html.DisplayName("服務電話")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfficeTelephone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model) @Html.DisplayName("商店地址")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StoreLocationId" />
        <input type="submit" value="刪除" class="btn btn-danger" style="background-color: #f7a3a3; border: none; " />

        |

        <button type="button" class="btn btn-info" style="background-color: #9bfab6; border: none; color: white;">
            <a asp-action="Index">回到目錄</a>
        </button>
    </form>
</div>
