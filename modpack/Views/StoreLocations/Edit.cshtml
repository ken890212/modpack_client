@model modpack.Models.StoreLocation

@{
    ViewData["Title"] = "Edit";
}

<h1>資訊修正</h1>

<h4>資訊更新</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoreLocationId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">門市</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeTelephone" class="control-label">服務電話</label>
                <input asp-for="OfficeTelephone" class="form-control" />
                <span asp-validation-for="OfficeTelephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">商店地址</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="存檔" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-info" style="background-color: #9bfab6; border: none; color: white;">
        <a asp-action="Index">回到目錄</a>
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
