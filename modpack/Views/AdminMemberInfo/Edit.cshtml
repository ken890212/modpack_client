@model modpack.Models.Member

@{
    ViewData["Title"] = "Edit";
}
<head>
    <style>
        .btn-icon img {
            margin-right: 5px; /* 在圖標和文字之間增加空間 */
            vertical-align: middle; /* 確保圖標和文字垂直對齊 */
        }
    </style>
</head>
<h1>修改</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
            <div class="form-group">
                <label for="LevelId" class="control-label">會員層級</label>
                <select asp-for="LevelId" class="form-control" asp-items="ViewBag.LevelId"></select>
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Account" class="form-control" type="hidden" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Password" class="form-control" type="hidden" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">會員名稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">電子信箱</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Phone" class="control-label">電話</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address" class="control-label">地址</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="CreationTime" class="form-control" type="hidden" />
                <span asp-validation-for="CreationTime" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="ModificationTime" class="form-control" type="hidden" />
                <span asp-validation-for="ModificationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-icon">
                    <img src="~/svg/upload.svg" alt="上傳" width="16" height="16" />
                    <span>送出修改</span>
                </button>

                <a asp-action="List" class="btn btn-icon">
                    <img src="~/svg/arrow-return-left.svg" alt="取消修改" width="16" height="16" />
                    <span>取消修改</span>
                </a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}