@model modpack.ViewModels.COrderViewModel
@{
    ViewData["Title"] = "Edit";
}
<h4>訂單狀態修改</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="@Model.order.OrderId" class="control-label"></label>
                <input asp-for="@Model.order.OrderId" class="form-control" />
                <span asp-validation-for="@Model.order.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.OrderStatusId" class="control-label">訂單狀態</label>
                <select asp-for="@Model.order.OrderStatusId" class="form-control" asp-items="@Model.orderstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.PaymentStatusId" class="control-label">付款狀態</label>
                <select asp-for="@Model.order.PaymentStatusId" class="form-control" asp-items="@Model.paymentstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.ShippingStatusId" class="control-label">寄送狀態</label>
                <select asp-for="@Model.order.ShippingStatusId" class="form-control" asp-items="@Model.shippingstatus"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消修改</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}