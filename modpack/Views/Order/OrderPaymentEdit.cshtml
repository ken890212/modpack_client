@model modpack.ViewModels.COrderViewModel

@{
    ViewData["Title"] = "OrderShippingEdit";
}

<h4>訂單付款資訊修改</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderPaymentEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="order.OrderId" />

            <div class="form-group">
                <label asp-for="@Model.order.PaymentStatusId" class="control-label">付款狀態</label>
                <select asp-for="@Model.order.PaymentStatusId" class="form-control" asp-items="@Model.paymentstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.PaymentId" class="control-label">付款方式</label>
                <select asp-for="@Model.order.PaymentId" class="form-control" asp-items="@Model.paymentmethod"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="OrderPaymentDetail">取消修改</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

