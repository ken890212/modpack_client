@model modpack.ViewModels.COrderViewModel

@{
    ViewData["Title"] = "OrderShippingEdit";
}

<h4>訂單寄送資訊修改</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderShippingEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="order.OrderId" />
            <div class="form-group">
                <label asp-for="@Model.order.ShippingStatusId" class="control-label">寄送狀態</label>
                <select asp-for="@Model.order.ShippingStatusId" class="form-control" asp-items="@Model.shippingstatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="order.RecipientName" class="control-label"></label>
                <input asp-for="order.RecipientName" class="form-control" />
                <span asp-validation-for="order.RecipientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="order.RecipientAddress" class="control-label"></label>
                <input asp-for="order.RecipientAddress" class="form-control" />
                <span asp-validation-for="order.RecipientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="order.BillRecipientName" class="control-label"></label>
                <input asp-for="order.BillRecipientName" class="form-control" />
                <span asp-validation-for="order.BillRecipientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="order.BillRecipientAddress" class="control-label"></label>
                <input asp-for="order.BillRecipientAddress" class="form-control" />
                <span asp-validation-for="order.BillRecipientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.ShippingId" class="control-label">寄送狀態</label>
                <select asp-for="@Model.order.ShippingId" class="form-control" asp-items="@Model.shippingmethod"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="OrderShippingDetail">取消修改</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
